<span class="user_profile">
  <span class="card_profile">
    <span class="user_icon">
      <% unless @user.image == '/images/N3_default.jpeg' %>
        <%= link_to user_path(id: @user.id), method: :get do %>
          <%= image_tag @user.image.url, size: "150x150", class: 'user_image' %>
        <% end %>
      <% end %>
    </span>
    <span class="user_username">
      <li><%= @user.username %></li>
    </span>
    <% if current_user == @user %>
      <span class="registration_content">
        <%= link_to edit_user_registration_path(@user), method: :get do %>
          <i class="fas fa-heart">プロフィール編集</i>
        <% end %>
      </span>
    <% end %>
  </span>
</span>
