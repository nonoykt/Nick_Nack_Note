<% if user_signed_in? %>
  <% if current_user.like?(micropost) %>
    <%= link_to likes_delete_path(micropost_id: micropost.id),
      { method: "post", remote: true } do %>
      <%# <%= image_tag("likes_icon")%>
    <% end %>
    <span class="likes">
      <%= link_to likes_create_path(micropost_id: micropost.id),
        { method: "post", remote: true } do %>
        <%# <%= image_tag("likes_icon")%>
      <% end %>
    </span>
    <span class="likes">
      <%= like.where(micropost_id: micropost.id).count %>いいね
    </span>
  <% end %>
<% else %>
