<% provide(:title, "#{@user.username}") %>
<div class="container_Main">
  <div class="container_flex">
    <div class="container_profile">
      <div class="profile_top row">
        <%= render template: "shared/user_profile" %>
        <%= render template: "shared/stats" %>
      </div>
      <div class="profile_bottom">
        <div class="container_follow">
          <%= render template: "shared/follow_form" %>
        </div>
      </div>
    </div>
    <div class="container_posts">
      <%= render template: "layouts/pagination_top" %>
      <%= render template: "shared/card_micropost" %>
      <%= render template: "layouts/pagination_bottom" %>
    </div>
  </div>
</div>
